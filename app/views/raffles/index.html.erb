<p id="notice"><%= notice %></p>
<div class="container">
<h1>Live WynRaffles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>TITLE</th>
      <th>DESCRIPTION</th>
      <th>PRIZE</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td class="raffletitle"><%= raffle.title %></td>
        <td><%= raffle.description %></td>
        <td><%= raffle.prize %></td>

        <td><button type="button" class="btn btn-primary showall"><%= link_to 'Show', raffle %></button></td>
        <% if current_user.admin? %>
          <td><button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_raffle_path(raffle) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', raffle, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
