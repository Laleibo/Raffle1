<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1><%= @raffle.title %></h1>
  <h3> "<%= @raffle.description %></h3>
  <div class="counter"><%= @count %> tickets have been sold for this raffle. </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="..." alt="...">
      <div class="caption">
        <h3>PRIZE</h3>
        <%= @raffle.prize %></div>
        <% if @raffle.winner == nil %>
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-default"><%= link_to 'Buy 1 Ticket', confirm_path(raffle_id: @raffle.id) %></button>
          </div>
        <!-- <button ><%= link_to 'Buy 1 Ticket', confirm_path(raffle_id: @raffle.id) %></button> -->
        <% else %>
        <h5> The Raffler Winner is <%= @raffle.winner.first_name%> <%= @raffle.winner.last_name%> </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
