<div class="container">
  <div class="ticketimage">
<div class= "redbox">
  <h1>Login</h1>
    <%= form_tag '/login' do %>

    <form>
      <div class="form-group">
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>
      </div>


      <div class="form-group">
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag "Login" %>
      </div>
    </form>
    

    <% end %>
  </div>
</div>
</div>
